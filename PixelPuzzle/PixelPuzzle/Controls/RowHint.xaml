<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PixelPuzzle.Controls.RowHint"
    xmlns:effects="clr-namespace:PixelPuzzle.Effects">
    <ContentView.Content>
        <Grid>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="Line_Tapped" />
            </Grid.GestureRecognizers>
            <Label
                Text="{Binding SegmentDisplay}"
                Padding="3, 0, 3, 0"
                Margin="0"
                BackgroundColor="White"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="End"
                TextColor="Black"
                FontAttributes="Bold"
                Opacity="{Binding IsValid, Converter={StaticResource LineOpacityConverter}}">
            </Label>
        </Grid>
    </ContentView.Content>
</ContentView>