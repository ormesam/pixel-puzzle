<?xml version="1.0" encoding="utf-8" ?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:PixelPuzzle.Converters"
    x:Class="PixelPuzzle.App">
    <Application.Resources>
        <converters:InvertBoolConverter
            x:Key="InvertBoolConverter" />
        <converters:LevelColourConverter
            x:Key="LevelColourConverter" />
        <converters:LevelInvertColourConverter
            x:Key="LevelInvertColourConverter" />
        <converters:LevelBackgroundConverter
            x:Key="LevelBackgroundConverter" />

        <GridLength
            x:Key="AdBannerHeight">
            50
        </GridLength>

        <Color
            x:Key="Red">
            #e8522b
        </Color>

        <Color
            x:Key="Orange">
            #f8a921
        </Color>

        <Color
            x:Key="Green">
            #86bc5c
        </Color>
    </Application.Resources>
</Application>