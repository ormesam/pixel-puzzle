<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PixelPuzzle.Screens.About.InfoScreen"
    Title="Pixel Puzzle">
    <ContentPage.Content>
        <StackLayout
            Padding="15">
            <Label
                FontSize="Large"
                Text="Pixel Puzzle" />
            <Label
                Text="{Binding VersionNumber, StringFormat='v{0}'}" />
            <Label
                Text="by Sam Orme" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>