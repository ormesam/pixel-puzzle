<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PixelPuzzle.Screens.Puzzle.PuzzleScreen"
    xmlns:controls="clr-namespace:PixelPuzzle.Controls"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding AdBannerHeight}" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image
                Source="{Binding Difficulty, Converter={StaticResource LevelBackgroundConverter}}"
                Grid.RowSpan="6"
                Aspect="AspectFill" />

            <controls:AdMobView
                VerticalOptions="Start" />

            <Grid
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <BoxView
                    Grid.ColumnSpan="9"
                    BackgroundColor="White"
                    Opacity=".9"/>

                <ImageButton
                    Grid.Column="1"
                    Padding="10"
                    WidthRequest="{Binding ToolbarButtonSize}"
                    HeightRequest="{Binding ToolbarButtonSize}"
                    Source="back.png"
                    Clicked="Back_Clicked"
                    CornerRadius="5" />

                <Label
                    Grid.Column="3"
                    VerticalTextAlignment="Center"
                    Text="{Binding LevelNumber}" />

                <ImageButton
                    Grid.Column="5"
                    Padding="10"
                    WidthRequest="{Binding ToolbarButtonSize}"
                    HeightRequest="{Binding ToolbarButtonSize}"
                    Source="reset.png"
                    Clicked="Reset_Clicked"
                    CornerRadius="5" />

                <ImageButton
                    Grid.Column="7"
                    Padding="10"
                    WidthRequest="{Binding ToolbarButtonSize}"
                    HeightRequest="{Binding ToolbarButtonSize}"
                    Source="info.png"
                    Clicked="Info_Clicked"
                    CornerRadius="5" />
            </Grid>

            <Grid
                Grid.Row="4"
                InputTransparent="{Binding IsComplete}">
                <controls:PuzzleControl
                    x:Name="PuzzleControl"
                    BindingContext="{Binding PuzzleControlViewModel}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>