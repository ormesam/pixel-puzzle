<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PixelPuzzle.Controls"
    x:Class="PixelPuzzle.Screens.Puzzle.DifficultyScreen"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding AdBannerHeight}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image
                Source="{Binding Difficulty, Converter={StaticResource LevelBackgroundConverter}}"
                Grid.RowSpan="2"
                Aspect="AspectFill" />

            <controls:AdMobView
                VerticalOptions="Start" />

            <ScrollView
                Grid.Row="1">
                <StackLayout>
                    <Grid
                        Grid.Row="1"
                        Margin="0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <BoxView
                            Grid.ColumnSpan="2"
                            BackgroundColor="White"
                            Opacity=".9"/>

                        <Label
                            Grid.ColumnSpan="2"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Title}" />

                        <ImageButton
                            Grid.Column="0"
                            Padding="10"
                            WidthRequest="50"
                            HeightRequest="50"
                            Source="back.png"
                            Clicked="Back_Clicked"
                            CornerRadius="5" />
                    </Grid>
                    <FlexLayout
                        BindableLayout.ItemsSource="{Binding Levels}"
                        Direction="Row"
                        JustifyContent="Center"
                        AlignContent="Center"
                        Wrap="Wrap"
                        Padding="10"
                        VerticalOptions="Start"
                        BackgroundColor="White"
                        Opacity=".9"
                        Margin="8">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Margin=".5"
                                    BackgroundColor="{Binding IsComplete, Converter={StaticResource LevelColourConverter}}"
                                    TextColor="{Binding IsComplete, Converter={StaticResource LevelInvertColourConverter}}"
                                    Text="{Binding LevelNumber}"
                                    Clicked="Level_Tapped"
                                    CornerRadius="0"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                    <Button
                        Text="Generate Random Puzzle"
                        Clicked="Random_Clicked"
                        BackgroundColor="White"
                        Margin="8"
                        Opacity=".9"/>
                    <Button
                        Text="Submit Puzzle"
                        Clicked="SubmitPuzzle_Clicked"
                        BackgroundColor="White"
                        Margin="8"
                        Opacity=".9"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>